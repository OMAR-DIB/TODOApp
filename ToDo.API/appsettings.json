{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "DbConfiguration": {
        "Server": "DESKTOP-2PRV1GI\\SQLEXPRESS",
        "Database": "ToDoApp"
    },
    "Email": {
        "From": "",
        "Username": "",
        "SmtpHost": "",
        "SmtpPort": "587",
        "UseSsl": "false",
        "UseStartTls": "true",
        "Password": ""
    },
    "Jwt": {
        "Key": "", // store via user-secrets or env var
        "Issuer": "ToDoApp",
        "Audience": "ToDoAppClients",
        "ExpiresMinutes": 60
    },

    "NLog": {
        "throwConfigExceptions": true,
        "extensions": [
            { "assembly": "NLog.Extensions.Logging" }
        ],
        "targets": {
            "logfile": {
                "type": "File",
                "fileName": "Logs/${shortdate}/${level}.txt",
                "layout": "${longdate} | ${uppercase:${level}} | ${message} ${exception:format=tostring}"
            }
        },
        "rules": [
            {
                "logger": "*",
                "minLevel": "Trace",
                "writeTo": "logfile"
            }
        ]
    }
}
